section.address
    .address__wrapper

        form.address__form(action="#")
            .input-container
                input(type="text" placeholder="Your email").input-field
            .input-container
                input(type="text" placeholder="Your name").input-field
            .input-container
                textarea(placeholder="Your message").input-textarea
            input(type="submit" value="Submit").button-orange.address__submit-button

        .section-headline.address__headline Our Offices
        .section__subtitle.address__subtitle Our doors are always open for you!

        .address__flex-container

            .address__map-block
                .address__map-poster
            
            .address__address-block

                .section-small-title.address__title Our address
                .address__office-address 30 St Mary Axe, London, EC3A 8EP, UK

                .section-small-title.address__title Phone
                a(href="tel:+447911257986").address__link + 44 7911 257986

                .section-small-title.address__title Email
                a(href="mailto:contact@bitbunch.com").address__link contact@bitbunch.com

                .section-small-title.address__title Company
                .address__link Bitbunch Ltd CRN:&nbsp;06488522