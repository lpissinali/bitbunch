section.pressroom-header
    .pressroom-header__wrapper

        .main-nav
            a(href="#").main-nav__logo-link
                img(src="./images/main-header__logo-image.png", alt="")
            nav.main-nav__nav-menu
                .main-nav__controls
                    a(href="#").main-nav__logo-link
                        img(src="./images/main-header__logo-image.png", alt="")
                    .main-nav__close-button
                        span Close menu
                        img(src="./images/main-nav__close-icon.png", alt="")
                ul.main-nav__menu-list
                    li.main-nav__menu-item
                        a(href="#").main-nav__menu-link How it works
                    li.main-nav__menu-item
                        a(href="#").main-nav__menu-link Pressroom
                    li.main-nav__menu-item
                        a(href="#").main-nav__menu-link Team
                    li.main-nav__menu-item
                        a(href="#").main-nav__menu-link FAQ
                    li.main-nav__menu-item
                        a(href="#").main-nav__menu-link Contact
                .main-nav__menu-buttons
                    a(href="#").button-orange.main-nav__user-sign-in-button Sign IN
                    a(href="#").button-orange.main-nav__user-register-button Register
            .main-nav__sandwich-button
            .main-nav__user-panel
                a(href="#").user-panel__sign-in-button Sign in
                a(href="#").button-orange.user-panel__register-button Register

        .pressroom-header__headline-block
            .section-main-headline.pressroom-header__headline Pressroom
            .pressroom-header__subtitle Welcome to Bitbunch pressroom. If you wish to make a press inquiry please contact us below
            a(href="#").button-orange.pressroom-header____contact-us-button Contact Us
    
        .pressroom-header__decor
