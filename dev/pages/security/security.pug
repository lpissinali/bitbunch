      .account-header__left
          .account-app-headline Bitbunch app
          .account-main-headline Security

    include ../../blocks/security-password/security-password

    include ../../blocks/security-authentication/security-authentication

block modal
    #modal-2fa-verification.modal.fade.modal__notification(tabindex="-1" role="dialog")
        .modal-dialog.modal__dialog.modal-dialog-centered(role="document")
            .modal-content.modal__content
                include ../../blocks/forms/modal/modal-2fa-verification

    #modal-google-authenticator.modal.fade.modal__notification(tabindex="-1" role="dialog")
        .modal-dialog.modal__dialog.modal-dialog-centered(role="document")
            .modal-content.modal__content
                include ../../blocks/forms/modal/modal-google-authenticator